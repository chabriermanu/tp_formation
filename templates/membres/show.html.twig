{% extends 'base.html.twig' %}

{% block title %}Détails du membre{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3>Détails du membre</h3>
                </div>
                <div class="card-body bg-white p-4">
                    <table class="table table-striped">
                        <tbody>
                            <tr>
                                <th width="200">ID :</th>
                                <td>{{ membres.idMembre }}</td>
                            </tr>
                            <tr>
                                <th>Nom :</th>
                                <td>{{ membres.nomMembre }}</td>
                            </tr>
                            <tr>
                                <th>Login :</th>
                                <td>{{ membres.loginMembre }}</td>
                            </tr>
                        </tbody>
                    </table>
                    
                    <div class="mt-4">
                        <a href="{{ path('app_membres_edit', {'id': membres.idMembre}) }}" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Modifier
                        </a>
                        <a href="{{ path('app_membres') }}" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Retour à la liste
                        </a>
                        
                        {# Optionnel : bouton supprimer #}
                        {# <form method="post" action="{{ path('app_membres_delete', {'id': membres.idMembre}) }}" style="display:inline-block;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ membres.idMembre) }}">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr ?')">
                                <i class="bi bi-trash"></i> Supprimer
                            </button>
                        </form> #}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Nouveau membre{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

   {{ form_start(form) }}
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card shadow">
                        <div class="card-header bg-primary text-white">
                            <h3>Ajouter un membre</h3>
                        </div>

                        <div class="card-body bg-white p-4">

                            {{ form_errors(form) }}

                            {{ form_row(form.nomMembre, {
                                label: 'Nom du membre',
                                attr: { class: 'form-control' }
                            }) }}

                            {{ form_row(form.loginMembre, {
                                label: 'Login',
                                attr: { class: 'form-control' }
                            }) }}

                            {{ form_rest(form) }}

                            <div class="mt-3">
                                <button type="submit" class="btn btn-outline-success">Enregistrer le membre</button>
                                <a href="{{ path('app_membres') }}" class="btn btn-danger">Annuler</a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{ form_end(form) }}

    <div class="text-center mt-3">
        <a href="{{ path('app_membres') }}">Retour Ã  la liste</a>
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Nouveau membre{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    {{ form_start(form) }}
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card shadow">
                        <div class="card-header bg-primary text-white">
                            <h3>Ajouter un membre</h3>
                        </div>
                        <div class="card-body bg-white p-4">
                            <div class="mb-3">
                                {{ form_row(form.nomMembre) }}
                            </div>
                            <div class="mb-3">
                                {{ form_row(form.loginMembre) }}
                            </div>
                            {{ form_rest(form) }}
                            <div>
                                <button type="submit" class="btn btn-outline-success">enregistrer le membre</button>
                                <a href="{{ path('app_membres') }}" class="btn btn-danger">Annuler</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{ form_end(form) }}
    <div class="text-center">
        <a href="{{ path('app_membres') }}">back to list</a>
    </div>
</div>
{% endblock %}